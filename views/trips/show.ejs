<%- include('../partials/header') %>

    <main>
        <%- include('../partials/nav') %>
            <div id="tripPgContainer">

                <article class="tripPg">
                    <h1><%= tripDoc.tripName %></h1>
                    <div class="tripInfo">
                        <div class="tripPicLg">
                            <img src="https://i.imgur.com/c5BIxS5.png">
                        </div>
                        <div class="tripDetails">
                            <a href="/users/<%= tripDoc.userID %>">
                                <img src="<%= tripDoc.userPFPic %>" class="pfIcon"> <%= tripDoc.user %>
                            </a><br/>
                            <p>
                                <span class="favorite"><%= (tripDoc.favorite === true) ? 'FAVE TRIP!' : 'Meh' %></span><br/>
                                <span class="tripLength">
                                    <%= tripDoc.tripStart %> - <%= tripDoc.tripEnd %>
                                </span><br />
                                <span class="tripHighlight">
                                    <%= tripDoc.highlight %>
                                </span>
                            </p>
                        </div>
                    </div>
                    <div id="excusionList">
                        Excursions Go here
                    </div>
                </article>

                <aside class="tripComments">
                    <ticket class="sml">
                        change this el tag name
                    </ticket>
                </aside>

            </div>

    </main>


    <%- include('../partials/footer') %>