<%- include('../partials/header') %>

    <main>
        <%- include('../partials/nav') %>
            <h2 class="formTitle">Log Your Trip:</h2>
            <form id="userForm" action="/users/<%= userDoc._id %>?method=PUT" method="POST">
                <label>Profile Name</label><br/>
                <input name="profileName" value="<%= userDoc.profileName %>"><br/>
                <label>Name</label><br/>
                <input name="mame" value="<%= userDoc.name %>"><br/>
                <label>Hometown</label><br/>
                <input name="hometown" value="<%= userDoc.hometown %>"><br/>
                <label>Favorite Trip</label><br/>
                <input name="faveTrip" value="<%= userDoc.faveTrip %>"><br/>
                <label>Favorite Excursion</label><br/>
                <input name="faveExcursion" value="<%= userDoc.faveExcursion %>"><br/>
                <label >Bucket List Trips</label><br/>
                <textarea name="bucketList"><%= userDoc.bucketList %></textarea>><br/>

                <input type="submit" value="Update Profile">
            </form>

    </main>

<%- include('../partials/footer') %>

